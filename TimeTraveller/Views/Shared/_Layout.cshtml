<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lapsody</title>
    <!-- BEGIN STYLESHEETS -->
    <script type="text/javascript" src="//maps.google.com/maps/api/js?sensor=true&key=AIzaSyBuHZcHf8nfPe5tT0eUkWz15ZJNCZFGkrE"></script>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400italic,300,400,600,700,800" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

</head>
<body class="menubar-hoverable header-fixed">
<div id="dialog" class="card" style="display: none">
    <div class="card-head style-primary">
        <img style="width: 40px;" src="~/Content/images/lapsody.png"/>
        <b>&nbsp;Welcome to Lapsody</b>
    </div>

    <div class="card-body">
        <a href="@Url.Action("Login", "Account")">Register</a> and Join <b>Lapsody </b>to combat Carbon Emission and keep your Local Community Sustainable and Green
        <hr/>

        <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-4" style="margin: auto"><button onclick="closeDialog()" class="btn btn-flat">Close</button>
            </div>
            <div class="col-xs-4"></div>
        </div>

    </div>
</div>

<div id="dialogHint" class="card" style="display: none">
    <div class="card-head style-primary">
        <img style="width: 40px;" src="~/Content/images/lapsody.png" />
        <b>&nbsp;First Use</b>
    </div>

    <div class="card-body">
        Click on the Lighbulb to customise the appliances in your household. Lapsody will calculate your CO2 emmisions and overlay that data on Google Map.
        <hr />

        <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-4" style="margin: auto"><button onclick="closeDialogHint()" class="btn btn-flat">Close</button></div>
            <div class="col-xs-4"></div>
        </div>

    </div>
</div>


<!-- BEGIN HEADER-->
    <header id="header">
        <div class="headerbar">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="headerbar-left">
                <ul class="header-nav header-nav-options">
                    <li class="header-nav-brand">
                        <div class="brand-holder">
                            <a asp-controller="Home" asp-action="Index">
                                <span class="text-lg text-bold text-primary">Lapsody</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <a class="btn btn-icon-toggle menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="headerbar-right">

                @if (Request.IsAuthenticated)
                {
                    Html.RenderAction("UserDetails", "Common");
                }

                @if (!Request.IsAuthenticated)
                {
                    <ul class="header-nav header-nav-toggle">
                        <li>
                            <a class="btn btn-icon-toggle btn-default" href="@Url.Action("Login", "Account")">
                                <i class="fa fa-lock"></i>
                            </a>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </header>
    <!-- END HEADER-->
    <!-- BEGIN BASE-->
    <div id="base">

        <!-- BEGIN OFFCANVAS LEFT -->
        <div class="offcanvas">
        </div><!--end .offcanvas-->
        <!-- END OFFCANVAS LEFT -->
        <!-- BEGIN CONTENT-->
        <div id="content">

            <!-- BEGIN BLANK SECTION -->
            <section>
                @RenderBody()
            </section>

            <!-- BEGIN BLANK SECTION -->
        </div><!--end #content-->
        <!-- END CONTENT -->
        <!-- BEGIN MENUBAR-->
        <div id="menubar" class="menubar-inverse">
            <div class="menubar-fixed-panel">
                <div>
                    <a class="btn btn-icon-toggle btn-default menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>
                <div class="expanded">
                    <a href="@Url.Action("Index", "Home")" class="active">
                        <span class="text-lg text-bold text-primary ">LAPSODY</span>
                    </a>
                </div>
            </div>
            <div class="menubar-scroll-panel">

                <!-- BEGIN MAIN MENU -->
                <ul id="main-menu" class="gui-controls">

                    <!-- BEGIN DASHBOARD -->
                    <li>
                        <a href="@Url.Action("Index", "Home")" class="active">
                            <div class="gui-icon">
                                <i class="md md-home"></i>
                            </div>
                            <span class="title">Dashboard</span>
                        </a>
                    </li><!--end /menu-li -->
                    <!-- END DASHBOARD -->
                    @if (!Request.IsAuthenticated)
                    {
                    <!-- BEGIN DASHBOARD -->
                        <li>
                            <a href="@Url.Action("Login", "Account")">
                                <div class="gui-icon">
                                    <i class="md md-lock"></i>
                                </div>
                                <span class="title">Login</span>
                            </a>
                        </li>
                    <!--end /menu-li -->
                    <!-- END DASHBOARD -->
                    }
                    else
                    {

                    }

                </ul><!--end .main-menu -->
                <!-- END MAIN MENU -->

                <div class="menubar-foot-panel">
                    <small class="no-linebreak hidden-folded">
                        <span class="opacity-75">Copyright &copy; 2015</span> <strong>Time Travellers</strong>
                    </small>
                </div>
            </div><!--end .menubar-scroll-panel-->
        </div><!--end #menubar-->
        <!-- END MENUBAR -->
        <!-- BEGIN OFFCANVAS RIGHT -->
        @if (Request.IsAuthenticated)
        {
            Html.RenderAction("MyUsage", "Common");
        }
        <!-- END OFFCANVAS RIGHT -->

    </div><!--end #base-->
    <!-- END BASE -->
    @RenderSection("scripts", required: false)
</body>

</html>
