@{
    ViewBag.Title = "Home Page";
}

@section scripts
{

    <script type="text/javascript">


        $(document).ready(function() {
            isAuthenticated = @Request.IsAuthenticated.ToString().ToLower();

            initMap();

            initHyperHub();

            getCurrentLocation();

            if (!isAuthenticated) {
                $("#dialog").dialog({
                    dialogClass: "no-close"
                });
            } else {
                var firstLoad = $.cookie('firstLoad');
                if (firstLoad == null) {
                    $.cookie('firstLoad', 1);
                    $("#dialogHint").dialog({
                        dialogClass: "no-close"
                    });
                }
            }
        });

    </script>
}
<div id="map" class="floating-label"></div>